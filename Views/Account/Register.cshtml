@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 420px; border-radius: 15px;">
        <div class="card-body">
            <h3 class="text-center mb-4 text-primary fw-bold">Create an Account</h3>

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" name="Username" class="form-control" placeholder="Enter your username" />
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" name="Password" class="form-control" type="password" placeholder="Enter a secure password" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>

            <div class="text-center mt-3">
                <small>Already have an account? <a href="/Account/Login" class="text-decoration-none">Login</a></small>
            </div>
        </div>
    </div>
</div>
